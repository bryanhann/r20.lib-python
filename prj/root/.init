# The following should set xxx to the absolute pathname of the script
xxx=$(python -c "import os.path;print(os.path.abspath(\"$0\"))")
here=$(dirname ${xxx})
venv=${here}/.venv

rm -rf ${venv}
python3 -m venv ${venv} 
echo source ${venv}/bin/activate                 > ${here}/.activate 
echo export PYTHONPATH=${here}/lib:$PYTHONPATH  >> ${here}/.activate

